<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V  T  S"
            android:textColor="@color/colorGrayA9A9A9"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawableLeft="@mipmap/ic_account"
                android:gravity="center_horizontal"
                android:hint="用户名/Username"
                android:textColor="@color/colorGray868787"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorGrayA9A9A9"/>

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawableLeft="@mipmap/ic_account"
                android:gravity="center_horizontal"
                android:hint="昵称/Nickname"
                android:textColor="@color/colorGray868787"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorGrayA9A9A9"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:drawableLeft="@mipmap/ic_password"
                android:gravity="center_horizontal"
                android:hint="密码/Password"
                android:textColor="@color/colorGray868787"
                android:textSize="12sp"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorGrayA9A9A9"/>

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:drawableLeft="@mipmap/ic_password"
                android:gravity="center_horizontal"
                android:hint="确认密码/Confirm"
                android:textColor="@color/colorGray868787"
                android:textSize="12sp"
                android:inputType="textPassword"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorGrayA9A9A9"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_oval_corner_graye222f3a"
            android:gravity="center"
            android:text="注册/SIGN IN"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>